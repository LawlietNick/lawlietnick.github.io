---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@consts";

interface Props {
  title: string;
  description: string;
  image?: string;
  jsonLd?: Record<string, unknown> | Record<string, unknown>[] | null;
  lang?: string;
}
const { title, description, image, jsonLd = null, lang ="fi" } = Astro.props;
---

<!doctype html>
<html lang="fi">
  <head>
    <Head title={`${title}`} description={description} image={image} jsonLd={jsonLd} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
